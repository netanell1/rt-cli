{
  "compilerOptions": {
    "module": "ESNext",               // Use ESNext to maintain ESM
    "target": "ES2020",               // Target modern JavaScript
    "moduleResolution": "Node",       // Ensures compatibility with Node.js resolution
    "outDir": "./dist",               // Output folder for compiled JS
    "rootDir": "./src",               // Source folder for TypeScript files
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
